@{
    Layout = "_Layout";
    var submitted = ViewData["Submitted"] as bool? ?? false;
    var f1 = ViewData["Field1"] as string ?? string.Empty;
    var f2 = ViewData["Field2"] as string ?? string.Empty;
    var f3 = ViewData["Field3"] as string ?? string.Empty;
}

<h2>Prosty formularz</h2>

@if (submitted)
{
    <div>
        <strong>Dziękuję — dane zostały przyjęte.</strong>
        <ul>
            <li>Pole 1: @f1</li>
            <li>Pole 2: @f2</li>
            <li>Pole 3: @f3</li>
        </ul>
    </div>
}

<form asp-controller="Form" asp-action="Submit" method="post">
    @Html.AntiForgeryToken()
    <div>
        <label>Pole 1: <input type="text" name="field1" value="" /></label>
    </div>
    <div>
        <label>Pole 2: <input type="text" name="field2" value="" /></label>
    </div>
    <div>
        <label>Pole 3: <input type="text" name="field3" value="" /></label>
    </div>
    <div>
        <button type="submit">Wyślij (POST)</button>
    </div>
</form>

